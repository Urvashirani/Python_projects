import random
jackpot = random.randint(1,100)
print("Welcome,Are you ready to play this gusseing game ")
print("Let's start ")
guess = int(input("Guess a number between 1 and 100 "))
counter = 1

while guess != jackpot:
  if guess > jackpot:
    print("Guess lower ")
  else :
    print("Guess higher")
  guess = int(input("Try one more chance "))
  counter += 1
else:
  print("-----------Hurray,You got tha jackpot-----------")
if counter == 1:
  print(f"Woah,You got in only {counter} attempt.Well done  ")
else :
  print(f"You take total {counter} attempt")
  
